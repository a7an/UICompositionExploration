<Page
    x:Class="UICompositionExploration.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UICompositionExploration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid x:Name="CircleContainer" Width="{Binding Value, ElementName=slider, Mode=TwoWay}" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,100,0,0">
            <Canvas x:Name="ShadowHost" />
            <Ellipse x:Name="CircleImage" Fill="Red"/>
        </Grid>

        <Slider x:Name="slider" Margin="100,27,0,0" Maximum="1000" Value="200" HorizontalAlignment="Left" Width="1000" Height="68" VerticalAlignment="Top"/>

        <Grid Width="{Binding Value, ElementName=slider, FallbackValue=200, Mode=TwoWay}" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,400,0,0" >
            <Canvas x:Name="ShadowHost2" />
            <Rectangle x:Name="TestRectangle" Fill="#FF175754" />
        </Grid>

    </Grid>
</Page>
